      "Bash(gh ruleset list:*)",
      "Bash(gh ruleset view:*)",
      "Bash(gh release list:*)",
      "Bash(gh release view:*)",
      "Bash(gh release download:*)",
      "Bash(gh release verify:*)",
      "Bash(gh release verify-asset:*)",
      "Bash(gh gist list:*)",
      "Bash(gh gist view:*)",
      "Bash(gh org list:*)",
      "Bash(gh cache list:*)",
      "Bash(gh label list:*)",
      "Bash(gh auth status:*)",
      "Bash(gh --version:*)",
      "Bash(gh --help:*)",
      "Edit(~/.cache/uv/**)",
      "Edit(/tmp/**)",
      "Edit(/private/tmp/**)",
      "Edit(**/.git/config)",
      "Read(~/Library/**)",
      "Read",
      "Read(~/.gnupg/**)",
      "Edit(~/.gnupg/**)",
      "Read(/tmp/**)",
      "Skill(xlsx)",
      "Skill(docx)",
      "Skill(pptx)",
      "Skill(pdf)",
      "WebFetch(domain:code.claude.com)",
      "Read(**/.env.example)",
      "Read(**/.env.sample)",
      "Read(**/.env.template)"
    ],
    "deny": [
      "Read(~/.aws/**)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Bash(sudo:*)",
      "Bash(format:*)",
      "Bash(dd:*)",
      "Bash(mkfs:*)"
    ]
  },
  "model": "sonnet",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --script /Users/Joshua/.claude/hooks/normalize-line-endings.py"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --script /Users/Joshua/.claude/hooks/prefer-modern-tools.py"
          },
          {
            "type": "command",
            "command": "uv run --script /Users/Joshua/.claude/hooks/auto-unsandbox-pbcopy.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --script /Users/Joshua/.claude/hooks/gpg-signing-helper.py"
          },
          {
            "type": "command",
            "command": "uv run --script /Users/Joshua/.claude/hooks/detect-heredoc-errors.py",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --script /Users/Joshua/.claude/hooks/gpg-signing-helper.py"
          },
          {
            "type": "command",
            "command": "uv run --script /Users/Joshua/.claude/hooks/detect-heredoc-errors.py",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "swift-lsp@claude-plugins-official": true
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "network": {},
    "excludedCommands": [
      "uv",
      "find",
      "fd",
      "mdfind",
      "ls",
      "cat",
      "grep",
      "rg",
      "head",
      "tail",
      "wc",
      "git",
      "gh",
      "gpg",
      "pbcopy"
    ]
  }
}
