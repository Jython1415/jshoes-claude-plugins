      "Bash(gh repo list:*)",
      "Bash(gh repo view:*)",
      "Bash(gh repo license:*)",
      "Bash(gh repo gitignore:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(gh run watch:*)",
      "Bash(gh workflow list:*)",
      "Bash(gh workflow view:*)",
      "Bash(gh status:*)",
      "Bash(gh search:*)",
      "Bash(gh browse:*)",
      "Bash(gh attestation download:*)",
      "Bash(gh attestation trusted-root:*)",
      "Bash(gh attestation verify:*)",
