{
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run --script \"${CLAUDE_PLUGIN_ROOT}\"/hooks/stop-momentum.py"
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run --script \"${CLAUDE_PLUGIN_ROOT}\"/hooks/delegation-guard.py"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run --script \"${CLAUDE_PLUGIN_ROOT}\"/hooks/delegation-guard.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --script \"${CLAUDE_PLUGIN_ROOT}\"/hooks/delegation-guard.py"
          }
        ]
      }
    ]
  }
}
